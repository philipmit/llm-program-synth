#<PrevData>
import requests, json, matplotlib.pyplot as plt
from scipy import stats
import numpy as np

print('********** Load and preview the dataset and datatypes')
##### define variables based on prompt
question='Is the rate of growth in the prevalence of arthritis higher in Omaha or Irvine?'
variable_text='prevalence of arthritis'
city1='Omaha'
city2='Irvine'

API_KEY = "<Your-API-Key>"

##### collect data from Data Commons for city1
url = "https://api.datacommons.org/query"
query = """
SELECT ?value ?date 
WHERE {
  ?city typeOf City .
  ?city name @en '{0}' .
  ?city containedInPlace ?state .
  ?state typeOf State .
  ?state containedInPlace country/USA .
  ?city population ?pop .
  ?pop asOf ?date .
  ?pop count ?value
}
""".format(city1)

response1 = requests.post(url, {"query": query, "key": API_KEY})
data1 = response1.json()
print('data1')
print(data1)

##### collect data from Data Commons for city2
query = """
SELECT ?value ?date 
WHERE {
  ?city typeOf City .
  ?city name @en '{0}' .
  ?city containedInPlace ?state .
  ?state typeOf State .
  ?state containedInPlace country/USA .
  ?city population ?pop .
  ?pop asOf ?date .
  ?pop count ?value
}
""".format(city2)

response2 = requests.post(url, {"query": query, "key": API_KEY})
data2 = response2.json()
print('data2')
print(data2)
#</PrevData>

#<PrepData>
print('********** Prepare the dataset for analysis and visualization')
X1 = [int(d['date']) for d in data1['rows']]
y1 = [float(d['value']) for d in data1['rows']]
X2 = [int(d['date']) for d in data2['rows']]
y2 = [float(d['value']) for d in data2['rows']]
